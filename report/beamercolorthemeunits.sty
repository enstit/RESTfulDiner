\usecolortheme{whale}
\usecolortheme{orchid}

\definecolor{UNITSBlack}{RGB}{0,0,0}
\definecolor{UNITSWhite}{RGB}{255,255,255}

\definecolor{UNITSCherry}{RGB}{189,14,73}
\definecolor{UNITSBlue}{RGB}{25,51,90}
\definecolor{UNITSEyesBlue}{RGB}{148,195,225}
\definecolor{UNITSIceBlue}{RGB}{186,206,210}
